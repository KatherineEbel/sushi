@import "whitespace-reset-modified.css"

body
  background url("../images/background-image.png") repeat
  font normal 14px "Lucianda", Helvetica, Arial, sans-serif

a
  text-decoration none
  &:focus,
  &:active
    outline none

#checkout
  > div
    background url("../images/sushi-preview.png")
    height 60px
  > div.img_top
    background-position top
  > div.img_bottom
    background-position bottom
  > section
    padding 55px 100px
    background #fff
    h1
      margin 0 0 60px 0
      font-size 40px
    table
      width 800px
      border-collapse collapse
      text-align left
      thead
        text-transform uppercase
      tbody td
        border-top 1px solid #b0b0b0
        border-bottom 1px solid #b0b0b0
        img
          height 100px
      td:nth-child(4),
      th:nth-child(4)
        text-align right
      td:nth-child(2)
        font-size 20px
      td:nth-child(3)
        font-weight bold
        .quantity_modifier
          margin 0 10px
          vertical-align middle
          border-radius 100%
          font-size 12px
          cursor pointer
        p
          display inline-block

      td:nth-child(4)
        font-size 20px
        letter-spacing 2px

    > p
      margin 15px 0 0 0
      text-align right
      font-size 10px
      text-transform uppercase
      color #787878
      .total
        margin 0 0 0 10px
        font-size 30px
        letter-spacing 2px
        color #000
    footer
      margin 50px 0 0 0
      text-align right
      a
        color #ff3170
        text-transform uppercase
      form
        display inline-block
        margin 0 0 0 20px
        input
          border none
          color #fff
          position relative
          padding 7px 15px 7px 10px
          background linear-gradient(to bottom, #d60041 0%, #a90040 100%)
          text-transform uppercase
          font-size 14px
          padding 15px
      form input:hover
        background linear-gradient(to bottom, #a90040 0%, #d60041 100%)
