#cart:empty {
  display: none
}

#cart
  height 120px
  overflow hidden
  background #000
  color #fff
  ul
    float left
    height inherit
    width 700px
    font-size 0
    li
      width 100px
      text-align right
      font-size 11px
      img
        width 100%
  section
    float right
    width 200px
    padding 20px 0 10px 15px
    background #1f1f1f
    h3
      font-size 10px
      text-transform uppercase
      color #b0b0b0
    .total
      margin 5px 0
      font-size 30px
    footer a
      text-align right
      font-size 10px
      display inline-block
      box-sizing border-box
      font-size 10px
    footer a.left
      width 40%
      color #ff3170
      text-transform uppercase
    footer a.right
      width 60%
      color #fff
      position relative
      padding 7px 15px 7px 10px
      background linear-gradient(to bottom, #d60041 0%, #a90040 100%)
      text-transform uppercase
    footer a.right:hover
      background linear-gradient(to bottom, #a90040 0%, #d60041 100%)
    footer a.right:before
      content ""
      display block
      width 0
      height 0
      position absolute
      left 0
      top 0
      border-top 14px solid #1f1f1f
      border-right 14px solid transparent
      border-bottom 14px solid transparent
      border-left 14px solid #1f1f1f
